{
	"name": "@goobits/store",
	"version": "1.8.0",
	"description": "Reusable e-commerce store components and utilities for Goobits projects built on Medusa v2",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./ui": {
			"types": "./dist/ui/index.d.ts",
			"svelte": "./dist/ui/index.js",
			"default": "./dist/ui/index.js"
		},
		"./ui/*": {
			"types": "./dist/ui/*.d.ts",
			"svelte": "./dist/ui/*",
			"default": "./dist/ui/*"
		},
		"./utils": {
			"types": "./dist/utils/index.d.ts",
			"svelte": "./dist/utils/index.js",
			"default": "./dist/utils/index.js"
		},
		"./utils/*": {
			"types": "./dist/utils/*.d.ts",
			"svelte": "./dist/utils/*",
			"default": "./dist/utils/*"
		},
		"./stores": {
			"types": "./dist/stores/index.d.ts",
			"svelte": "./dist/stores/index.js",
			"default": "./dist/stores/index.js"
		},
		"./stores/*": {
			"types": "./dist/stores/*.d.ts",
			"svelte": "./dist/stores/*",
			"default": "./dist/stores/*"
		},
		"./handlers": {
			"types": "./dist/handlers/index.d.ts",
			"svelte": "./dist/handlers/index.js",
			"default": "./dist/handlers/index.js"
		},
		"./handlers/*": {
			"types": "./dist/handlers/*.d.ts",
			"svelte": "./dist/handlers/*",
			"default": "./dist/handlers/*"
		},
		"./payment": {
			"types": "./dist/payment/index.d.ts",
			"svelte": "./dist/payment/index.js",
			"default": "./dist/payment/index.js"
		},
		"./payment/*": {
			"types": "./dist/payment/*.d.ts",
			"svelte": "./dist/payment/*",
			"default": "./dist/payment/*"
		},
		"./config": {
			"types": "./dist/config/index.d.ts",
			"svelte": "./dist/config/index.js",
			"default": "./dist/config/index.js"
		},
		"./config/*": {
			"types": "./dist/config/*.d.ts",
			"svelte": "./dist/config/*",
			"default": "./dist/config/*"
		},
		"./i18n": {
			"types": "./dist/i18n/index.d.ts",
			"svelte": "./dist/i18n/index.js",
			"default": "./dist/i18n/index.js"
		},
		"./i18n/*": {
			"types": "./dist/i18n/*.d.ts",
			"svelte": "./dist/i18n/*",
			"default": "./dist/i18n/*"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"keywords": [
		"sveltekit",
		"shop",
		"store",
		"ecommerce",
		"checkout",
		"components"
	],
	"author": "Goobits",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"dependencies": {
		"@medusajs/medusa-js": "^6.1.10",
		"qrcode": "^1.5.4"
	},
	"peerDependencies": {
		"@lucide/svelte": "^0.548.0",
		"@stripe/stripe-js": "^3.0.0 || ^4.0.0 || ^5.0.0",
		"@sveltejs/kit": "^2.0.0",
		"formsnap": "^2.0.0",
		"svelte": "^5.0.0",
		"sveltekit-superforms": "^2.25.0",
		"zod": "^3.23.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@testing-library/svelte": "^5.3.1",
		"@types/node": "^25.1.0",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"eslint": "^9.39.2",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.2.0",
		"jsdom": "^27.4.0",
		"sass-embedded": "^1.97.3",
		"svelte": "^5.48.5",
		"svelte-check": "^4.3.5",
		"svelte-eslint-parser": "^1.4.1",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	},
	"scripts": {
		"dev": "svelte-package --watch",
		"build": "svelte-package",
		"prepublishOnly": "pnpm run build",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "eslint src/",
		"lint:fix": "eslint src/ --fix",
		"check": "svelte-check --tsconfig ./tsconfig.json"
	},
	"homepage": "https://github.com/goobits/store#readme",
	"bugs": {
		"url": "https://github.com/goobits/store/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/goobits/store.git"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=9.0.0"
	}
}

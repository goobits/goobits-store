{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"module": "ESNext",
		"target": "ESNext"
	},
	"include": [
		"src/**/*.js",
		"src/**/*.svelte"
	],
	"exclude": [
		"node_modules",
		"dist",
		".svelte-kit"
	]
}
